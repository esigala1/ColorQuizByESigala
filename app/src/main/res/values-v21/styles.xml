<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="SigalaQuiz" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorButtonNormal">@color/colorButton</item>
        <item name="android:textColorPrimaryInverse">@color/colorTextPrimaryInverse</item>
        <item name="android:textViewStyle">@style/App_TextViewStyle</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="App_TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>