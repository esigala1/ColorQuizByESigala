<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="SigalaQuiz" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorButtonNormal">@color/colorButton</item>
        <item name="android:textColorPrimaryInverse">@color/colorTextPrimaryInverse</item>
        <item name="android:textViewStyle">@style/App_TextViewStyle</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <!-- TextView Style. -->
    <style name="App_TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- EditText Style. -->
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- RadioButton Style. -->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/level1</item>
        <item name="android:layout_marginRight">@dimen/level1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:text">@string/answer_item</item>
    </style>

    <!-- Quiz Button Style. -->
    <style name="QuizButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/level3</item>
        <item name="android:paddingBottom">@dimen/level3</item>
        <item name="android:paddingTop">@dimen/level3</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>